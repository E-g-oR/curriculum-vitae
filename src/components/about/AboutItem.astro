---
import Divider from "../Divider.astro";
interface Props {
    title: string
}
const {title} = Astro.props
---
<div class={"flex flex-col gap-4"}>
    <h2 class={"text-3xl font-bold"}>{title}</h2>
    <Divider color={"light"}/>
    <div class={`flex flex-col gap-2`}>
        <slot/>
    </div>
</div>

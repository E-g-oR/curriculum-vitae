---
import {Contact} from "../../content/config";
import {Icon} from "astro-icon"
interface Props {
    contact: Contact
}
const {contact} = Astro.props
const {icon, title, body, href} = contact
---
<a
        href={href}
        target={"_blank"}
        class="p-4 flex items-center gap-8 rounded hover:bg-zinc-700 transition"
>
    <Icon pack={"mdi"} name={icon} class="w-10 h-10 max-w-10"/>
    <div class={"flex flex-col"}>
        <strong>{title}</strong>
        <span>{body}</span>
    </div>
</a>

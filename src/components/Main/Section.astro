---
import Container from "../Container.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<Container>
  <section class={"flex flex-col gap-5 mt-8"}>
    <header class="mb-4">
      <h2 class={"text-4xl font-bold text-center"}>{title}</h2>
    </header>
    <slot />
  </section>
</Container>
